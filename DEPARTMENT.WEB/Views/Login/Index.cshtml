<script>
    document.addEventListener("DOMContentLoaded", function () {
        var inputElement = document.getElementById("username");
        if (inputElement) {
            inputElement.focus();
        }
        document.addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                SignIn();
            }
        });
    });

    function SignIn() {

        // Element to indecate
        var button = document.querySelector("#signInBtn");

        // Activate indicator
        button.setAttribute("data-kt-indicator", "on");

        // Disable indicator after 3 seconds
        //setTimeout(function () {
        //    button.removeAttribute("data-kt-indicator");
        //}, 3000);



        var username = document.getElementById('username').value;
        var password = document.getElementById('password').value;
        var userModel = {
            username: username,
            password: password
        }

        $.ajax({
            //url: '@Url.Action("SignIn", "Login")',
            url: '/Login/SignIn',
            type: "POST",
            data: { user: userModel },
            success: function (data) {
                console.log(data);

                //inputlar boş iken tıklanırsa
                if (data == null) {
                    toastr.error("Kullancı Adı ve Şifre Boş Bırakılamaz.");
                    button.removeAttribute("data-kt-indicator");
                }
                else {
                    if (data == "Ok") {


                        button.removeAttribute("data-kt-indicator");
                        window.location.href = "/Home/Index";
                    }
                    else if (data == "Error") {
                        toastr.info("Kullancı Adı veya Şifre Yanlış, Lütfen Tekrar Deneyiniz.");
                        button.removeAttribute("data-kt-indicator");
                    }

                    console.log(data);


                }
            }



        });


    }
</script>
