<script>
    function resetInputs(...inputIds) {
        inputIds.forEach(id => {
            var element = document.getElementById(id);
            if (element) {
                switch (element.type) {
                    case 'text':
                    case 'textarea':
                    case 'password':
                    case 'email':
                    case 'number':
                    case 'date':
                    case 'url':
                    case 'tel':
                        element.value = '';
                        break;
                    case 'checkbox':
                    case 'radio':
                        element.checked = true;
                        break;
                    case 'select-one':
                    case 'select-multiple':
                        element.selectedIndex = -1;

                        break;
                    default:
                        element.innerHTML = "";
                        break;
                }
            }
        });
    }

