<script>

    //Profile Functions
    function GetProfileInfo() {
        var profileId = document.getElementById('profileId').value;
        $.ajax({
            url: '@Url.Action("GetUserById", "User")',
            type: "GET",
            data: { id: profileId },
            success: function (data) {
                if (data != null) {            
                    document.getElementById('profileusername').value = data.data.username;
                    document.getElementById('profilename').value = data.data.name;
                    document.getElementById('profilelastname').value = data.data.lastName;
                    document.getElementById('profileemail').value = data.data.email;
                    document.getElementById('profilepassword').value = data.data.password;
                    document.getElementById('profilerole').value = data.data.userType.type;
                    document.getElementById('profiledepartment').value = data.data.department.name;    
                    document.getElementById('profiledepartmentId').value = data.data.departmentId;
                    document.getElementById('profileuserTypeId').value = data.data.userTypeId;
                }
            }
        });

    }
     function UpdateProfile() {

        var Id = document.getElementById("profileId").value;
        var Name = document.getElementById("profilename").value;       
        var Lastname = document.getElementById("profilelastname").value;
        var Username = document.getElementById("profileusername").value;
        var Password = document.getElementById("profilepassword").value;
        var Email = document.getElementById("profileemail").value;
        var UserTypeId = document.getElementById("profileuserTypeId").value;
        var DepartmentId = document.getElementById("profiledepartmentId").value;

        var model = {
            id: Id, 
            name: Name,
            lastName: Lastname,
            username: Username,
            password: Password,
            email: Email,
            departmentId:DepartmentId,
            userTypeId:UserTypeId
        
        };

        $.ajax({
            url: '@Url.Action("UpdateUser", "User")',
            type: "POST",
            data: { model: model },
            success: function (data) {
               if (data.data != null) {
                    if (data.resultStatus === 0) {
                  
                             Swal.fire({
                            text: "Düzenleme Başarılı",
                            icon: "success",
                            buttonsStyling: false,
                            confirmButtonText: "Kapat",
                            timer: 5000,
                            customClass: {
                                confirmButton: "btn btn-success"
                            }
                        });
                    } else {
                        if (data.resultStatus === 3) {

                                Swal.fire({
                            text: "Düzenleme İşlemi Başarısız!",
                            icon: "info",
                            buttonsStyling: false,
                            confirmButtonText: "Kapat",
                            timer: 5000,
                            customClass: {
                                confirmButton: "btn btn-info"
                            }
                        });
                        }
                        else {
                            toastr.warning("Bir Hata Oluştu.");
                        }

                    }
                }
                


            }
        });
    }

    function resetInputs(...inputIds) {
        inputIds.forEach(id => {
            var element = document.getElementById(id);
            if (element) {
                switch (element.type) {
                    case 'text':
                    case 'textarea':
                    case 'password':
                    case 'email':
                    case 'number':
                    case 'date':
                    case 'url':
                    case 'tel':
                        element.value = '';
                        break;
                    case 'checkbox':
                    case 'radio':
                        element.checked = true;
                        break;
                    case 'select-one':
                    case 'select-multiple':
                        element.selectedIndex = -1;

                        break;
                    default:
                        element.innerHTML = "";
                        break;
                }
            }
        });
    }

